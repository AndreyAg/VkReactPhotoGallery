{
  "extends": [
    "plugin:import/errors",
    "plugin:import/warnings"
//    "airbnb",
//    "airbnb/hooks"
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "no-debugger": 0,
    "no-console": 0,
    "new-cap": 0,
    "strict": 1,
    "no-underscore-dangle": 0,
    "no-use-before-define": 0,
    "eol-last": 0,
    //"quotes": [2, "single", { "avoidEscape": true }],
    "jsx-quotes": [
      1,
      "prefer-single"
    ],
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "off",
    "no-unsafe-finally": 0,
    "no-constant-condition": 0,
    "no-fallthrough": 0
  },
  "parserOptions": {
    "ecmaVersion": 2020
  }
}